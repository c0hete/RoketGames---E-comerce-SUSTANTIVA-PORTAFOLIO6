<%- include('header.ejs', { pageTitle: 'RocketGames' }) %>
<body>
   
  <div class="container-fluid w-50 d-flex flex-column align-items-center">
    <div class="abs-center">
      <h2 class="text-light">Register</h2> 
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
        <li class="text-light"><%= error.message %></li>
        <% }) %> <% } %>
      <!-- post rute -->
      <form class="border border-danger p-3 bg-white" action="/register" method="POST" enctype="multipart/form-data">
        <div class="mb-3 form-group">
          <input type="text" id="name" name="name" class="form-control" placeholder="Name" required>
        </div>
        <div class="mb-3 form-group">
          <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
        </div>
        <div class="mb-3 form-group">
          <input type="password" id="password" name="password" class="form-control" placeholder="Password">
        </div>
        <div class="mb-3 form-group">
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password">
        </div>
        <div class="mb-3 form-group">
          <label for="photo" class="form-label">Foto de Perfil</label>
          <input class="form-control" type="file" id="photo" name="photo" required/>
        </div>
        <div class="mb-3">
          <input class="btn btn-danger" type="submit" value="Register" >
        </div>
        <a class="text-danger" href="/login">Already registered? Log in here</a>
      </form>
    </div>
  </div>
  
  <%- include('footer.ejs') %>
</body>
</html>