<body>
  <div class="container mt-5 text-light">
    <div class="container">
   
      <% if (isAdmin) { %>
        <span><h1>ADMIN</h1></span> <span>
        <a href="/admin" class="btn btn-primary">Administrar</a>
      <% } %>
    </span>
    </div>
    
    <div class="row">
      <div class="col-md-4">
        <div class="text-center mb-4">
          <img src="/<%= userId %>/image" class="avatar" alt="Profile Picture">
          <h3 class="mt-2"><%= user.charAt(0).toUpperCase() + user.slice(1) %></h3>
        </div>
        <input type="file" id="profilePicture" class="form-control file-input mb-4" name="profilePicture">
        <button id="changeProfilePicture" class="btn btn-primary">Cambiar foto de perfil</button>
      </div>
      <div class="col-md-8">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
