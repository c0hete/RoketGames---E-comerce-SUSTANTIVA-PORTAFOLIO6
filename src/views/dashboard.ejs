        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="purchase-history" role="tabpanel" aria-labelledby="purchase-history-tab">
            <!-- Historial de compras -->
          </div>
        </div>
      </div>
      
        <%- include('footer.ejs') %>
